
@{
    ViewBag.Title = "Rol atama";
}
<div class="container">
    <div class="row">
        <div class="sparkline12-list shadow-reset mg-t-30 " style="width:600px; margin-left:30%; margin-top:130px">
            <div class="sparkline12-hd">
                <div class="main-sparkline12-hd">
                    <h1>Rol Atama</h1>
                    <div class="sparkline12-outline-icon">
                        <span class="sparkline12-collapse-link"><i class="fa fa-chevron-up"></i></span>
                        <span class="sparkline12-collapse-close"><i class="fa fa-times"></i></span>
                    </div>
                </div>
            </div>
            <div class="sparkline12-graph">
                <div class="basic-login-form-ad">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="all-form-element-inner">
                                <form action="/User/UserInRoles" method="post">

                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="login2 pull-right pull-right-pro">Kullanıcı Rolleri:</label>
                                            </div>
                                            <div class="col-lg-9">
                                                <select multiple class="form-control" id="selectUserRoles" name="addedRoles">
                                                    @foreach (string role in ViewBag.UserRoles)
                                                    {
                                                        <option value="@role">@role</option>
                                                    }
                                                </select>
                                            </div>
                                            <div></div>
                                            <div class="col-lg-3">
                                                <label class="login2 pull-right pull-right-pro">Eklenebilir Roller:</label>
                                            </div>
                                            <div class="col-lg-9">
                                                <select class="form-control" name="availableRoles">
                                                    @foreach (string role in ViewBag.AvailableRoles)
                                                    {
                                                        <option value="@role">@role</option>
                                                    }

                                                </select>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="form-group-inner">
                                        <br />
                                        <input name="username" value="@ViewBag.Username" type="hidden" />
                                        <button type="submit" class="btn btn-primary">Ata</button>
                                        <a class="btn btn-danger" id="removedRoles" data-username="@ViewBag.UserName">Sil</a>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


