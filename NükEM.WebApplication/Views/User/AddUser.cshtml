
@{
    ViewBag.Title = "KullanıcıEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
<div class="row">
        <div class="sparkline12-list shadow-reset mg-t-30 " style="width:600px; margin-left:30%; margin-top:130px">
            <div class="sparkline12-hd">
                <div class="main-sparkline12-hd">
                    <h1>Kullanıcı Ekleme</h1>
                    <div class="sparkline12-outline-icon">
                        <span class="sparkline12-collapse-link"><i class="fa fa-chevron-up"></i></span>
                        <span class="sparkline12-collapse-close"><i class="fa fa-times"></i></span>
                    </div>
                </div>
            </div>
            <div class="sparkline12-graph">
                <div class="basic-login-form-ad">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="all-form-element-inner">
                                <form action="/User/AddUser" method="post">

                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="login2 pull-right pull-right-pro">Kullanıcı Adı:</label>
                                            </div>
                                            <div class="col-lg-9">
                                                <input type="text" class="form-control" placeholder="Kullanıcı adı giriniz" name="UserName" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="login2 pull-right pull-right-pro">Parola</label>
                                            </div>
                                            <div class="col-lg-9">
                                                <input type="password" class="form-control" name="Password" placeholder="Parola giriniz" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="login2 pull-right pull-right-pro">Email</label>
                                            </div>
                                            <div class="col-lg-9">
                                                <input type="email" class="form-control" name="Email" placeholder="Email giriniz" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="login2 pull-right pull-right-pro">Gizli Soru</label>
                                            </div>
                                            <div class="col-lg-9">
                                                <input type="text" class="form-control" name="PasswordQuestion" placeholder="Gizli soru giriniz" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="login2 pull-right pull-right-pro">Gizli Cevap</label>
                                            </div>
                                            <div class="col-lg-9">
                                                <input type="text" class="form-control" name="PasswordAnswer" placeholder="Gizli cevap giriniz" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group-inner">
                                        <div class="login-btn-inner">
                                            <div class="row">
                                                <div class="col-lg-3"></div>
                                                <div class="col-lg-9">

                                                    <div class="login-horizental cancel-wp pull-left">

                                                        <button class="btn btn-sm btn-primary login-submit-cs" type="submit">Kaydet</button>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <span id="error">@ViewBag.createMessage</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <style>
        #hata {
            color: red;
            font-size: 16px;
        }
    </style>

}
