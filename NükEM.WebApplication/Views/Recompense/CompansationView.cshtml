
@{
    ViewBag.Title = "CompansationView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using NükEM.Repository;


<div class="container">
    <div class="row">
        <div class="sparkline12-list shadow-reset mg-t-30 " style="width:600px; margin-left:30%; margin-top:130px">
            <div class="sparkline12-hd">
                <div class="main-sparkline12-hd">
                    <h1>@ViewBag.viewFrom Tazminatı Hesapla</h1>
                </div>
            </div>
            <div class="sparkline12-graph">
                <div class="basic-login-form-ad">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="all-form-element-inner">
                                <form action="/Recompense/NoticePayment" method="post">
                                    <div class="form-group-inner">

                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="login2 pull-right pull-right-pro">Aylık Brüt Maaş Miktarı</label>
                                            </div>
                                            <div class="col-lg-9">
                                                <input type="text" class="form-control" name="gross" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="login2 pull-right pull-right-pro">Kümülatif Gelir Vergisi Matrahı</label>
                                            </div>
                                            <div class="col-lg-9">
                                                <input type="text" class="form-control" name="cita" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="login2 pull-right pull-right-pro">İşe Giriş Tarihi</label>
                                            </div>
                                            <div class="input-group date">
                                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                                <input type="date" class="form-control" value="10/04/2018" name="date1">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <label class="login2 pull-right pull-right-pro">İşten Çıkış Tarihi</label>
                                            </div>
                                            <div class="input-group date">
                                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                                <input type="date" class="form-control" value="10/04/2018" name="date2">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group-inner">
                                        <div class="login-btn-inner">
                                            <div class="row">
                                                <div class="col-lg-3"></div>
                                                <div class="col-lg-9">
                                                    <div class="col-lg-3">
                                                        @{
                                                            string str1 = @ViewBag.viewFrom;
                                                            <input type="hidden" id="lbl" name="hiddenBag" value=@str1 />
                                                        }
                                                    </div>
                                                    <div class="login-horizental cancel-wp pull-left">
                                                        @{
                                                            if (ViewBag.viewFrom == "İhbar")
                                                            {
                                                                <button type="submit" class="btn btn-sm btn-primary login-submit-cs" id="btn1" onclick="changeLabel()">Hesapla</button>
                                                            }
                                                            else
                                                            {
                                                                <button type="submit" class="btn btn-sm btn-primary login-submit-cs" onclick="changeLabel2()">Hesapla</button>
                                                            }
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Content/js/vendor/jquery-1.11.3.min.js"></script>
